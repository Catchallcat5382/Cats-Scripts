local Scroll = Instance.new("ScrollingFrame", TeleportFrame)
Scroll.Position = UDim2.fromOffset(0,35)
Scroll.Size = UDim2.new(1,0,1,-120)
Scroll.BackgroundTransparency = 1
Scroll.ScrollBarImageTransparency = 0.5
local Layout = Instance.new("UIListLayout", Scroll)

local loopTarget, looping = nil, false
local orbitTarget, orbiting = nil, false
local orbitAngle, orbitRadius, orbitSpeed = 0, 6, 2

local function instantGoto(player)
	local char = LocalPlayer.Character
	local targetChar = player and player.Character
	if not (char and targetChar) then return end

	local myHRP = char:FindFirstChild("HumanoidRootPart")
	local targetHRP = targetChar:FindFirstChild("HumanoidRootPart")
	if not (myHRP and targetHRP) then return end

	local offset =
		-targetHRP.CFrame.LookVector * 2
		+ Vector3.new(0, 0.1, 0)

	myHRP.CFrame = CFrame.new(
		targetHRP.Position + offset,
		targetHRP.Position
	)

	myHRP.AssemblyLinearVelocity = Vector3.zero
end

local function softFollow(player, dt)
	local char = LocalPlayer.Character
	local targetChar = player and player.Character
	if not (char and targetChar) then return end

	local myHRP = char:FindFirstChild("HumanoidRootPart")
	local hum = char:FindFirstChildOfClass("Humanoid")
	local targetHRP = targetChar:FindFirstChild("HumanoidRootPart")
	if not (myHRP and hum and targetHRP) then return end

	-- NEVER force sit / platform stand
	if hum.Sit then hum.Sit = false end

	-- Desired position: behind target, same Y
	local desiredPos =
		targetHRP.Position
		- targetHRP.CFrame.LookVector * 2
		+ Vector3.new(0, 0.1, 0)

	local delta = desiredPos - myHRP.Position
	local dist = delta.Magnitude

	-- If too far, snap ONCE (prevents roof / lag desync)
	if dist > 12 then
		myHRP.CFrame = CFrame.new(desiredPos, targetHRP.Position)
		myHRP.AssemblyLinearVelocity = Vector3.zero
		return
	end

	-- Soft velocity follow (keeps animations + emotes alive)
	local followSpeed = 12
	myHRP.AssemblyLinearVelocity =
		delta.Unit * math.min(dist * followSpeed, 40)
end

local loopCooldown = 0

RunService.Heartbeat:Connect(function(dt)
	-- ===== SOFT LOOP GOTO =====
	if looping and loopTarget then
		softFollow(loopTarget, dt)
	end

	-- ===== ORBIT (UNCHANGED) =====
	if orbiting and orbitTarget and orbitTarget.Character then
		local hrp = orbitTarget.Character:FindFirstChild("HumanoidRootPart")
		local my = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
		if hrp and my then
			orbitAngle += dt * orbitSpeed
			my.CFrame = CFrame.new(
				hrp.Position + Vector3.new(
					math.cos(orbitAngle)*orbitRadius,
					2,
					math.sin(orbitAngle)*orbitRadius
				),
				hrp.Position
			)
		end
	end
end)

local OrbitBtn = Instance.new("TextButton", TeleportFrame)
OrbitBtn.Size = UDim2.new(1,0,0,28)
OrbitBtn.Position = UDim2.new(0,0,1,-70)
